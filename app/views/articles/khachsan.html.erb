                            <% end %>
                            <% end %>
                        </div>
                    </aside>
                    <select class="form-control" id="change_number_item" aria-label="Default select example" style="width:140px">
                        <% if session[:show]%>
                        <option selected disabled>Hiển thị: <%= session[:show] %></option>
                        <% end %>
