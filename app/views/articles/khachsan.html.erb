                    </select>
                </div>
                <div class="col-lg-9 sanpham">
                    <% if @all_product %>
                    <% @all_product.each do |pro| %>
                    <% if pro.view==nil 
                        pro.view = 0
                        end
                    %>
                    <div class="khoisp">
                        <div class="nen">
                            <div class="anh">
                                <%= image_tag(pro.image.url, alt: 'Image') if pro.image? %>
                            </div>
                            <div class="chitiet">
                                <p class="text-muted loaigiuong"><%= pro.danhmuc.category_name %></p>
                                <a href="<%= detail_path(:id => pro.id) %>">
                                    <p class="text-dark title"><%= pro.name  %></p>
                                </a>
                                <p class="gia">
                                    <% if pro.price_discount==nil || pro.price_discount == pro.price %>
                                    <span class="text-primary sau" itemid="2999000"> <%= number_to_currency(pro.price, unit: "đ",format: "%n %u", precision: 0)  %></span></p>
                                <% else %>
                                <span class="text-primary truoc"><strike><%= number_to_currency(pro.price, unit: "đ",format: "%n %u", precision: 0)  %></strike></span>
                                <span class="text-primary sau" itemid="2999000"> <%= number_to_currency(pro.price_discount, unit: "đ",format: "%n %u", precision: 0)  %></span></p>
                                <% end %>
                                <p class="gioithieu">
                                    <%= raw(pro.desc)  %>
                                </p>

                                <p class="rank_star">
                                    <% @i=0 %>
                                    <% while @i < pro.rating do %>
                                    <span class="yellow_star"><i class="fa fa-star"></i></span>
                                    <% @i+=1 %>
                                    <% end %>
                                    <% while @i < 5 do %>
                                    <span class="black_star"><i class="fa fa-star"></i></span>
                                    <% @i+=1 %>
                                    <% end %>
                                    <span class="float-right text-muted small"><i class="fa fa-heart"></i> Đã xem
                                        <span id="count_view"><%= pro.view%></span> </i></span>
                                </p>
                            </div>
                        </div>
                    </div>
                    <% end %>
                    <% end %>
                </div>
