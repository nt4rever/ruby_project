<div class="row">
    <!-- left column -->
    <div class="col-md-8">
        <!-- general form elements -->
        <div class="card card-primary">
            <div class="card-header">
                <h3 class="card-title">Thêm danh mục</h3>
            </div>
            <section class="content" style="min-height: auto;display: flex;justify-content: center;">
                <% flash.each do |key, value| %>
                <div class="row">
                    <div class="alert alert-<%= key %>">
                        <%= value %>
                    </div>
                </div>
                <% end %>
            </section>
            <!-- /.card-header -->
            <!-- form start -->
            <%= form_for:category,url: update_category_path(:id =>@category.id) do |f| %>
            <div class="card-body">
                <div class="form-group">
                    <label for="category_name">Tên danh mục</label>
                    <%=f.text_field :category_name, class:'form-control', required: 'true' %>
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword1">Mô tả</label>
                    <div class='field'><%= f.text_area :category_desc, class: 'ckeditor' %></div>
                </div>

            </div>
            <!-- /.card-body -->

            <div class="card-footer">
                <%= f.submit "Submit", class: 'btn btn-primary' %>
            </div>
            <% end %>
        </div>
        <!-- /.card -->


    </div>
    <!-- /.card -->
</div>
<!--/.col (right) -->
</div>
