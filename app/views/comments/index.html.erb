 <h1 class="m-0 text-dark pb-2">Bình luận sản phẩm</h1>

 <div class="card-body">
     <% flash.each do |key, value| %>
     <div class="callout callout-<%= key %>">
         <p><%= value %></p>
     </div>
     <% end %>
 </div>
 <div class="row">
     <div class="col-12">
         <div class="card">
             <div class="card-header">
                

                 <div class="card-tools">
                     <div class="input-group input-group-sm" style="width: 150px;">
                         <input type="text" name="table_search" class="form-control float-right" placeholder="Search">

                         <div class="input-group-append">
                             <button type="submit" class="btn btn-default">
                                 <i class="fas fa-search"></i>
                             </button>
                         </div>
                     </div>
                 </div>
             </div>
             <!-- /.card-header -->
             <div class="card-body table-responsive p-0" style="height: 400px;">
                 <table class="table table-head-fixed text-nowrap">
                     <thead>
                         <tr>
                             <th>id</th>
                             <th>user</th>
                             <th>content</th>
                             <th>product</th>
                             <th>updated_at</th>
                             <th>edit</th>
                         </tr>
                     </thead>
                     <tbody>
                         <% if @all_comment %>
                         <% @all_comment.each do |item| %>
                         <tr>
                             <td>
                                 <%= item.id  %>
                             </td>
                             <td>
                                 <%= item.user.lastName  %>
                             </td>
                             <td>
                                 <%= item.content %>
                             </td>
                             <td>
                                 <a href="<%= detail_path(:id => item.hotel_id) %>" target="_blank"><%= item.hotel.name %></a>

                             </td>
                             <td>
                                 <%= item.updated_at %>
                             </td>
                             <td>
                                 <a href="<%= delete_comment_path(:id=>item.id) %>" class="btn btn-sm btn-outline-danger">
                                     <i class="fas fa-trash"></i>
                                 </a>
                             </td>
                         </tr>
                         <% end %>
                         <% end %>
                     </tbody>
                 </table>

             </div>
             <div class="ml-2">
                 <%== pagy_bootstrap_nav(@pagy) %>
             </div>

             <!-- /.card-body -->
         </div>
         <!-- /.card -->
     </div>
 </div>