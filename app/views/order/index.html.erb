 <h1 class="m-0 text-dark pb-2">Đơn hàng</h1>

 <div class="card-body">
     <% flash.each do |key, value| %>
     <div class="callout callout-<%= key %>">
         <p><%= value %></p>
     </div>
     <% end %>
 </div>
 <div class="row">
     <div class="col-12">
         <div class="card">
             <div class="card-header">
            

                 <div class="card-tools">
                     <div class="input-group input-group-sm" style="width: 150px;">
                         <input type="text" name="table_search" class="form-control float-right" placeholder="Search">

                         <div class="input-group-append">
                             <button type="submit" class="btn btn-default">
                                 <i class="fas fa-search"></i>
                             </button>
                         </div>
                     </div>
                 </div>
             </div>
             <!-- /.card-header -->
             <div class="card-body table-responsive p-0" style="height: 400px;">
                 <table class="table table-head-fixed text-nowrap">
                     <thead>
                         <tr>
                             <th>id</th>
                             <th>status</th>
                             <th>name</th>
                             <th>phone</th>
                             <th>email</th>
                             <th>hotel</th>
                             <th>time</th>
                             <th>note</th>
                             <th>user_id</th>
                            <th>edit</th>
                         </tr>
                     </thead>
                     <tbody>
                         <% if @all_order %>
                         <% @all_order.each do |item| %>
                         <tr>
                             <td>
                                 <%= item.id  %>
                             </td>
                             <td>
                                <% if item.status==0 %>
                                   <span class="badge badge-secondary">Đang chờ xữ lý</span>
                                <% elsif item.status==1 %>
                                  <span class="badge badge-success">Đã xác nhận</span>
                                <% else %>
                                   <span class="badge badge-danger">Đã hủy</span>
                                <% end %>
                             </td>
                             <td>
                                 <%= item.name  %>
                             </td>
                            <td>
                                 <%= item.phone  %>
                             </td>
                             <td>
                                 <%= item.email  %>
                             </td>
                             <td>
                                <a href="<%= detail_path(:id => item.hotel_id) %>" target="_blank">
                                 <%= item.hotel.name %>
                                 </a>
                             </td>
                             <td>
                                 <%= item.updated_at.to_formatted_s(:long_ordinal) %>
                             </td>
                             <td>
                                 <%= item.note  %>
                             </td>
                             <td>
                                 <%= item.user_id  %>
                             </td>
                             <td> 
                              <a href="<%= order_confirm_path(:id=>item.id) %>" class="btn btn-sm btn-outline-success">
                                     <i class="fas fa-check"></i>
                                </a>
                                <a href="<%= order_cancel_path(:id=>item.id) %>" class="btn btn-sm btn-outline-danger">
                                     <i class="fas fa-window-close"></i>
                                 </a>
                             </td>
                         </tr>
                         <% end %>
                         <% end %>
                     </tbody>
                 </table>

             </div>
             <div class="ml-2">
                    <%== pagy_bootstrap_nav(@pagy) %>
             </div>

             <!-- /.card-body -->
         </div>
         <!-- /.card -->
     </div>
 </div>