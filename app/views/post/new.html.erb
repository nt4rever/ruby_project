<div class="row">
    <!-- left column -->
    <div class="col-md-8">
        <!-- general form elements -->
        <div class="card card-primary">
            <div class="card-header">
                <h3 class="card-title">Thêm bài viết</h3>
            </div>
            <section class="content" style="min-height: auto;display: flex;justify-content: center;">
                <% flash.each do |key, value| %>
                <div class="row">
                    <div class="alert alert-<%= key %>">
                        <%= value %>
                    </div>
                </div>
                <% end %>
            </section>
            <!-- /.card-header -->
            <!-- form start -->
            <%= form_for:post,url: create_post_path do |f| %>
            <div class="card-body">
                <div class="form-group">
                    <label for="category_name">Tiêu đề</label>
                    <%=f.text_field :posts_title, class:'form-control', required: 'true' %>
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword1">Mô tả</label>
                    <div class='field'><%= f.rich_text_area :posts_desc %></div>
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword1">Nội dung</label>
                    <div class='field'><%= f.rich_text_area :posts_content %></div>
                </div>
                <div class="form-group">
                    <label for="image">Ảnh</label>
                    <%= f.file_field :posts_image, class: 'form-control', required: 'true' %>
                </div>
                <div class="form-group">
                    <label for="category_name">Từ khóa</label>
                    <%=f.text_field :posts_meta, class:'form-control', required: 'true' %>
                </div>

            </div>
            <!-- /.card-body -->

            <div class="card-footer">
                <%= f.submit "Submit", class: 'btn btn-primary' %>
            </div>
            <% end %>
        </div>
        <!-- /.card -->


    </div>
    <!-- /.card -->
</div>
<!--/.col (right) -->
</div>
