 <h1 class="m-0 text-dark pb-2">Tin tức</h1>

 <div class="card-body">
     <% flash.each do |key, value| %>
     <div class="callout callout-<%= key %>">
         <p><%= value %></p>
     </div>
     <% end %>
 </div>
 <div class="row">
     <div class="col-12">
         <div class="card">
             <div class="card-header">
                 <a href="<%= new_post_path %>" class="btn btn-outline-info">Thêm bài viết</a>

                 <div class="card-tools">
                     <div class="input-group input-group-sm" style="width: 150px;">
                         <input type="text" name="table_search" class="form-control float-right" placeholder="Search">

                         <div class="input-group-append">
                             <button type="submit" class="btn btn-default">
                                 <i class="fas fa-search"></i>
                             </button>
                         </div>
                     </div>
                 </div>
             </div>
             <!-- /.card-header -->
             <div class="card-body table-responsive p-0" style="height: 400px;">
                 <table class="table table-head-fixed text-nowrap">
                     <thead>
                         <tr>
                             <th>id</th>
                             <th>post_title</th>
                             <th>post_desc</th>
                             <th>updated_at</th>
                             <th>edit</th>
                         </tr>
                     </thead>
                     <tbody>
                         <% if @all_post %>
                         <% @all_post.each do |item| %>
                         <tr>
                             <td>
                                 <%= item.id  %>
                             </td>
                             <td>
                                 <%= item.post_title  %>
                             </td>
                             <td>
                             <div class="overflow-hidden" style="max-width: 500px;">  <%= raw(item.post_desc)  %></div>
                               
                             </td>
                             <td>
                                 <%= item.updated_at %>
                             </td>
                             <td>
                                 <a href="<%= edit_post_path(:id=>item.id) %>" class="btn btn-sm btn-outline-warning">
                                     <i class="fas fa-edit"></i>
                                 </a>

                                 <a href="<%= delete_post_path(:id=>item.id) %>" class="btn btn-sm btn-outline-danger">
                                     <i class="fas fa-trash"></i>
                                 </a>
                             </td>
                         </tr>
                         <% end %>
                         <% end %>
                     </tbody>
                 </table>

             </div>
             <div class="ml-2">
                    <%== pagy_bootstrap_nav(@pagy) %>
             </div>

             <!-- /.card-body -->
         </div>
         <!-- /.card -->
     </div>
 </div>