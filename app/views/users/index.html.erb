<% if notice %>
<p id="notice"><%= notice %></p>
<% end %>

<h1>User List</h1>

<table class="table">
    <thead>
        <tr>
            <th scope="col">id</th>
            <th scope="col">name</th>
            <th scope="col">name</th>
            <th scope="col">pass</th>
            <th scope="col">cre</th>
            <th scope="col">updt</th>
        </tr>
    </thead>
    <tbody>
        <% if @all_user %>
        <% @all_user.each do |user| %>
        <tr>
            <th scope="row">
                <%= user.id %>
            </th>
            <td>
                <%= user.firstName  %>
                <%= user.lastName %>
            </td>
            <td>
                <%= user.email %>
            </td>
            <td>
                <%= user.password_digest %>
            </td>
            <td>
                <%= user.created_at %>
            </td>
            <td>
                <%= user.updated_at %>
            </td>
        </tr>
        <% end %>
        <% end %>
    </tbody>
</table>